{
  "keyword": {
    "mapping": {
      "type": "keyword"
    }
  },
  "lowercase_sort": {
    "mapping": {
      "type": "keyword",
      "normalizer": "keyword_lowercase"
    }
  },
  "date": {
    "mapping": {
      "type": "date",
      "format": "epoch_millis||strict_date_optional_time_nanos||strict_date_optional_time"
    }
  },
  "source": {
