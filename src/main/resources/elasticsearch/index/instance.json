{
  "index": {
    "number_of_shards": 4,
    "number_of_replicas": 2,
    "refresh_interval": "1s",
    "codec": "best_compression",
    "mapping.total_fields.limit": 1000
  },
  "analysis": {
    "char_filter": { },
    "normalizer": {
      "keyword_lowercase": {
        "filter": [ "lowercase" ],
        "type": "custom"
      },
      "keyword_uppercase": {
        "filter": [ "uppercase" ],
        "type": "custom"
      }
    },
    "analyzer": {
      "source_analyzer": {
        "tokenizer": "standard",
        "filter": [ "lowercase", "icu_folding" ],
        "type": "custom"
      }
    },
    "tokenizers": { }
  }
}
