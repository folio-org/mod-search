{
  "index": {
    "number_of_shards": 4,
    "number_of_replicas": 1,
    "refresh_interval": "1s",
    "codec": "best_compression",
    "mapping.total_fields.limit": 250
  },
  "analysis": {
    "char_filter": {
      "remove_hyphen_char_filter": {
        "type": "mapping",
        "mappings": [ "-=>" ]
      }
    },
    "normalizer": {
      "keyword_lowercase": {
        "filter": [ "lowercase" ],
        "type": "custom"
      }
    },
    "analyzer": {
      "source_analyzer": {
        "tokenizer": "standard",
        "filter": [ "lowercase" ],
        "type": "custom"
      },
      "isbn_analyzer": {
        "tokenizer": "standard",
        "char_filter": [ "remove_hyphen_char_filter" ],
        "filter": [ "lowercase" ]
      }
    },
    "tokenizers": { }
  }
}
