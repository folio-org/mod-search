{
  "index": {
    "number_of_shards": 4,
    "number_of_replicas": 2,
    "refresh_interval": "1s",
    "codec": "best_compression",
    "mapping.total_fields.limit": 1000,
    "sort.field": "subject",
    "sort.order": "asc"
  },
  "analysis": {
    "char_filter": {
      "apostrophe_replace_char_filter": {
        "type": "pattern_replace",
        "pattern": "(\\S+)'(\\S+)",
        "replacement": "$1$2 $1 $2"
      }
    },
    "normalizer": {
      "keyword_lowercase": {
        "filter": [ "lowercase" ],
        "type": "custom"
      }
    },
    "analyzer": {
      "source_analyzer": {
        "tokenizer": "icu_tokenizer",
        "filter": [ "lowercase", "icu_folding" ],
        "char_filter": [ "apostrophe_replace_char_filter" ],
        "type": "custom"
      }
    },
    "tokenizers": { }
  }
}
