{
  "name": "instance",
  "languageSourcePaths": [
    "$.languages"
  ],
  "fields": {
    "id": {
      "index": "keyword",
      "showInResponse": true
    },
    "hrid": {
      "index": "keyword"
    },
    "source": {
      "index": "keyword"
    },
    "title": {
      "inventorySearchTypes": ["title", "keyword"],
      "index": "multilang",
      "showInResponse": true,
      "mappings": {
        "copy_to": [ "sort_title" ]
      }
    },
    "alternativeTitles": {
      "type": "object",
      "properties": {
        "alternativeTitle": {
          "inventorySearchTypes": ["title", "keyword"],
          "index": "multilang"
        }
      }
    },
    "indexTitle": {
      "inventorySearchTypes": ["title", "keyword"],
      "index": "multilang"
    },
    "series": {
      "inventorySearchTypes": ["title", "keyword"],
      "index": "multilang"
    },
    "identifiers": {
      "type": "object",
      "properties": {
        "value": {
          "inventorySearchTypes": "keyword",
          "index": "keyword"
        },
        "identifierTypeId": {
          "index": "source"
        }
      }
    },
    "contributors": {
      "type": "object",
      "properties": {
        "name": {
          "inventorySearchTypes": ["contributors", "keyword"],
          "index": "multilang",
          "showInResponse": true
        }
      }
    },
    "subjects": {
      "index": "multilang"
    },
    "instanceTypeId": {
      "index": "keyword"
    },
    "instanceFormatId": {
      "index": "keyword"
    },
    "languages": {
      "index": "keyword"
    },
    "metadata": {
      "name": "metadata",
      "type": "object",
      "properties": {
        "createdDate": {
          "index": "date",
          "fieldType": "date"
        },
        "createdByUserId": {
          "index": "keyword"
        },
        "createdByUsername": {
          "index": "keyword"
        },
        "updatedDate": {
          "index": "date"
        },
        "updatedByUserId": {
          "index": "keyword"
        },
        "updatedByUsername": {
          "index": "keyword"
        }
      }
    },
    "publication": {
      "type": "object",
      "properties": {
        "publisher": {
          "inventorySearchTypes": "publisher",
          "index": "multilang",
          "showInResponse": true
        },
        "dateOfPublication": {
          "index": "source",
          "showInResponse": true
        }
      }
    }
  },
  "extendedFields": {
    "sort_contributors": {
      "type": "extended",
      "index": "lowercase_sort",
      "processor": "sortContributorsProcessor"
    }
  },
  "indexMappings": {
    "sort_title": {
      "type": "keyword",
      "normalizer": "keyword_lowercase",
      "ignore_above": 50,
      "index": false,
      "doc_values": true
    }
  }
}
