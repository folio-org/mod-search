    "suppress": {
      "type": "object",
      "properties": {
        "fromDiscovery": {
          "searchAliases": [ "suppressFromDiscovery" ],
          "index": "bool",
          "default": false
        },
        "staff": {
          "searchAliases": [ "staffSuppress" ],
          "index": "bool",
          "default": false
        }
      }
    },
    "titles": {
      "type": "object",
      "properties": {
        "value": {
          "index": "whitespace"
        },
        "type": {
          "index": "whitespace"
        }
      }
    },
    "parentWork": {
      "type": "object",
      "properties": {
        "id": {
