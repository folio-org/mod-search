{
  "name": "linked-data-work",
  "eventBodyJavaClass": "org.folio.search.domain.dto.LinkedDataWork",
  "reindexSupported": true,
  "languageSourcePaths": [ "$.languages" ],
  "fields": {
    "id": {
      "index": "whitespace"
    },
    "classifications": {
      "type": "object",
      "properties": {
        "number": {
          "index": "whitespace"
        },
        "source": {
          "index": "whitespace"
        }
      }
    },
    "contributors": {
      "type": "object",
      "properties": {
        "name": {
          "index": "whitespace"
        },
        "type": {
          "index": "whitespace"
        },
        "isCreator": {
          "index": "whitespace"
        }
      }
    },
    "hubAAPs": {
      "searchAliases": [ "hub, hubAap, hubAAP" ],
      "index": "keyword_lowercase"
    },
    "languages": {
      "searchAliases": [ "lang, language" ],
      "index": "keyword_lowercase"
    },
    "notes": {
      "type": "object",
      "properties": {
        "value": {
          "index": "whitespace"
        },
        "type": {
          "index": "whitespace"
        }
      }
    },
    "subjects": {
      "index": "whitespace"
    },
    "titles": {
      "type": "object",
      "properties": {
        "value": {
          "index": "whitespace"
        },
        "type": {
          "index": "whitespace"
        }
      }
    },
    "instances": {
      "type": "object",
      "properties": {
        "id": {
          "index": "keyword"
        },
        "contributors": {
          "type": "object",
          "properties": {
            "name": {
              "index": "whitespace"
            },
            "type": {
              "index": "whitespace"
            },
            "isCreator": {
              "index": "whitespace"
            }
          }
        },
        "editionStatements": {
          "type": "object",
          "properties": {
            "value": {
              "index": "whitespace"
            }
          }
        },
        "format": {
          "index": "keyword_lowercase"
        },
        "identifiers": {
          "type": "object",
          "properties": {
            "value": {
              "index": "whitespace"
            },
            "type": {
              "index": "whitespace"
            }
          }
        },
        "notes": {
          "type": "object",
          "properties": {
            "value": {
              "index": "whitespace"
            },
            "type": {
              "index": "whitespace"
            }
          }
        },
        "publications": {
          "type": "object",
          "properties": {
            "name": {
              "index": "whitespace"
            },
            "date": {
              "searchAliases": [ "publicationDate" ],
              "index": "keyword"
            }
          }
        },
        "suppress": {
          "type": "object",
          "properties": {
            "fromDiscovery": {
              "searchAliases": [ "suppressFromDiscovery" ],
              "index": "bool",
              "default": false
            },
            "staff": {
              "searchAliases": [ "staffSuppress" ],
              "index": "bool",
              "default": false
            }
          }
        },
        "titles": {
          "type": "object",
          "properties": {
            "value": {
              "index": "whitespace"
            },
            "type": {
              "index": "whitespace"
            }
          }
        }
      }
    }
  },
  "searchFields": {
    "contributor": {
      "type": "search",
      "index": "multilang",
      "processor": "linkedDataWorkContributorProcessor"
    },
    "isbn": {
      "type": "search",
      "processor": "linkedDataWorkIsbnProcessor",
      "searchTermProcessor": "isbnSearchTermProcessor",
      "index": "standard",
      "indexPlainValue": false
    },
    "lccn": {
      "type": "search",
      "index": "standard",
      "processor": "linkedDataWorkLccnProcessor"
    },
    "note": {
      "type": "search",
      "index": "multilang",
      "processor": "linkedDataWorkNoteProcessor"
    },
    "title": {
      "type": "search",
      "index": "multilang",
      "processor": "linkedDataWorkTitleProcessor"
    },
    "sort_title": {
      "searchTypes": "sort",
      "type": "search",
      "index": "keyword_lowercase",
      "processor": "linkedDataWorkSortTitleProcessor"
    }
  },
  "indexMappings": { }
}
