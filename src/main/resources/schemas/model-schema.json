{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A resource description for mod-search service",
  "title": "Search Resource Description",
  "type": "object",
  "definitions": {
    "plainFieldDescription": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "sourcePath": {
          "type": "string"
        },
        "languageSource": {
          "type": "boolean"
        },
        "esFieldType": {
          "type": [ "array", "string" ],
          "enum": [ "keyword", "date", "multilang", "lowercase_sort" ],
          "items": {
            "type": "string",
            "enum": [ "keyword", "date", "multilang" ]
          }
        },
        "searchType": {
          "type": [ "array", "string" ],
          "enum": [ "term", "text", "multilang", "facet" ],
          "items": {
            "type": "string",
            "enum": [ "term", "text", "multilang", "facet" ]
          }
        },
        "mappings": {
          "type": "object",
          "description": "Elasticsearch additional mappings that will enrich default value for this field"
        }
      },
      "required": [ "name", "esFieldType", "sourcePath" ]
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Resource name"
    },
    "index": {
      "type": "string",
      "description": "Resource index name in Elasticsearch"
    },
    "fields": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/plainFieldDescription"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "object"
              },
              "name": {
                "type": "string"
              },
              "properties": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/plainFieldDescription"
                }
              }
            }
          }
        ]
      }
    }
  }
}